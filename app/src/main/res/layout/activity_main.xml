<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideInset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/accelerationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Acceleration Data"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gyroTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Gyro Data"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/magneticTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Magnetic Data"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/LocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="GPS_Location"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- Other view elements and layout -->


        <Button
            android:id="@+id/initializeButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Initialize"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/startButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Start"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/stopButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Stop"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:rippleColor="#FF80AB" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/accel_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            android:background="#ffffff" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/gyro_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            android:background="#ffffff" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/mag_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            android:background="#ffffff" />


    </LinearLayout>

</ScrollView>

